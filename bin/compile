#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2

VENDOR_DIR="$BUILD_DIR/vendor"
INSTALL_DIR="$VENDOR_DIR/graphicsmagick-webp"
CACHE_FILE="$CACHE_DIR/graphicsmagick-webp.tar.gz"

mkdir -p $CACHE_DIR
mkdir -p $VENDOR_DIR

if [ ! -f $CACHE_FILE ]; then

  cd $BUILD_DIR
  
  # install nasm

  # NASM_VERSION="2.11.06"
  # NASM_FILE="nasm-$NASM_VERSION.tar.gz"
  # NASM_DIR="nasm-$NASM_VERSION"
  # NASM_URL="http://www.nasm.us/pub/nasm/releasebuilds/$NASM_VERSION/$NASM_FILE"
  #
  # echo "-----> Downloading nasm from $NASM_URL"
  # curl -L --silent $NASM_URL | tar xz
  #
  # echo "-----> Building nasm"
  # cd $NASM_DIR
  # ./configure --prefix=$INSTALL_DIR
  # make && make install
  # cd ..
  # rm -rf $NASM_DIR

  
  # install jpeg-turbo
   
  # JPEG_VERSION="1.3.1"
  # JPEG_FILE="libjpeg-turbo-$JPEG_VERSION.tar.gz"
  # JPEG_DIR="libjpeg-turbo-$JPEG_VERSION"
  # JPEG_URL="https://s3.amazonaws.com/fhqwhgads/$JPEG_FILE"
  #
  # echo "-----> Downloading libjpeg-turbo from $JPEG_URL"
  # curl -L --silent $JPEG_URL | tar xz
  #
  # echo "-----> Building libjpeg-turbo"
  # cd $JPEG_DIR
  # ./configure --prefix=$INSTALL_DIR --bindir=$INSTALL_DIR/bin --libdir=$INSTALL_DIR/lib --includedir=$INSTALL_DIR/lib --disable-static
  # make && make install
  # cd ..
  # rm -rf $JPEG_DIR
 
  # install libwebp

  LIBWEBP_VERSION="0.4.2"
  LIBWEBP_FILE="libwebp-$LIBWEBP_VERSION.tar.gz"
  LIBWEBP_DIR="libwebp-$LIBWEBP_VERSION"
  LIBWEBP_URL="http://downloads.webmproject.org/releases/webp/$LIBWEBP_FILE"

  echo "-----> Downloading libwebp from $LIBWEBP_URL"
  curl -L --silent $LIBWEBP_URL | tar xz

  echo "-----> Building libwebp"
  cd $LIBWEBP_DIR
  ./configure --prefix=$INSTALL_DIR --disable-static
  make && make install
  cd ..
  rm -rf $LIBWEBP_DIR
  
 
  # install graphicsmagick

  GRAPHICS_MAGICK_VERSION="1.3.20"
  GRAPHICS_MAGICK_FILE="GraphicsMagick-$GRAPHICS_MAGICK_VERSION.tar.gz"
  GRAPHICS_MAGICK_DIR="GraphicsMagick-$GRAPHICS_MAGICK_VERSION"
  GRAPHICS_MAGICK_URL="ftp://ftp.graphicsmagick.org/pub/GraphicsMagick/1.3/$GRAPHICS_MAGICK_FILE"

  echo "-----> Downloading GraphicsMagick from $GRAPHICS_MAGICK_URL"
  curl -L --silent $GRAPHICS_MAGICK_URL | tar xz

  echo "-----> Building GraphicsMagick"
  cd $GRAPHICS_MAGICK_DIR
  export CPPFLAGS="-I$INSTALL_DIR/include"
  export LDFLAGS="-L$INSTALL_DIR/lib"
  ./configure --prefix=$INSTALL_DIR --enable-openmp-slow --with-webp --disable-static
  make && make install
  cd ..
  rm -rf $GRAPHICS_MAGICK_DIR

  # cache for future deploys
  
  echo "-----> Caching GraphicsMagick and libwebp installation"
  cd $VENDOR_DIR
  REL_INSTALL_DIR="graphicsmagick-webp"
  tar czf $REL_INSTALL_DIR.tar.gz $REL_INSTALL_DIR
  mv $REL_INSTALL_DIR.tar.gz $CACHE_FILE

else

  # cache exists, extract it

  echo "-----> Extracting GraphicsMagick and libwebp $CACHE_FILE => $VENDOR_DIR"
  tar xzf $CACHE_FILE -C $VENDOR_DIR
fi

# update PATH and LD_LIBRARY_PATH

echo "-----> Updating environment variables"
PROFILE_PATH="$BUILD_DIR/.profile.d/graphicsmagick-webp.sh"
ACTUAL_INSTALL_PATH="$HOME/vendor/graphicsmagick-webp"
mkdir -p $(dirname $PROFILE_PATH)
echo "export PATH=$ACTUAL_INSTALL_PATH/bin:\$PATH" >> $PROFILE_PATH
echo "export LD_LIBRARY_PATH=$ACTUAL_INSTALL_PATH/lib:\$LD_LIBRARY_PATH" >> $PROFILE_PATH
