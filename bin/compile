#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2

VENDOR_DIR="$BUILD_DIR/vendor"
INSTALL_DIR="$VENDOR_DIR/imagemagick-graphicsmagick-webp"
CACHE_FILE="$CACHE_DIR/imagemagick-graphicsmagick-webp.tar.gz"

mkdir -p $CACHE_DIR
mkdir -p $VENDOR_DIR

if [ ! -f $CACHE_FILE ]; then

  cd $BUILD_DIR
   
  # install libwebp

  LIBWEBP_VERSION="0.4.2"
  LIBWEBP_FILE="libwebp-$LIBWEBP_VERSION.tar.gz"
  LIBWEBP_DIR="libwebp-$LIBWEBP_VERSION"
  LIBWEBP_URL="http://downloads.webmproject.org/releases/webp/$LIBWEBP_FILE"

  echo "-----> Downloading libwebp from $LIBWEBP_URL"
  curl -L --silent $LIBWEBP_URL | tar xz

  echo "-----> Building libwebp"
  cd $LIBWEBP_DIR
  ./configure --prefix=$INSTALL_DIR --disable-static
  make && make install
  cd ..
  rm -rf $LIBWEBP_DIR
  
 
  # install graphicsmagick

  GRAPHICS_MAGICK_VERSION="1.3.20"
  GRAPHICS_MAGICK_FILE="GraphicsMagick-$GRAPHICS_MAGICK_VERSION.tar.gz"
  GRAPHICS_MAGICK_DIR="GraphicsMagick-$GRAPHICS_MAGICK_VERSION"
  GRAPHICS_MAGICK_URL="http://downloads.sourceforge.net/project/graphicsmagick/graphicsmagick/$GRAPHICS_MAGICK_VERSION/$GRAPHICS_MAGICK_FILE"

  echo "-----> Downloading GraphicsMagick from $GRAPHICS_MAGICK_URL"
  curl -L --silent $GRAPHICS_MAGICK_URL | tar xz

  echo "-----> Building GraphicsMagick"
  cd $GRAPHICS_MAGICK_DIR
  export CPPFLAGS="-I$INSTALL_DIR/include"
  export LDFLAGS="-L$INSTALL_DIR/lib"
  ./configure --prefix=$INSTALL_DIR --with-webp --without-tiff --without-perl --enable-openmp-slow --disable-static
  make && make install
  cd ..
  rm -rf $GRAPHICS_MAGICK_DIR
  
  
  # install imagemagick

  IMAGE_MAGICK_VERSION="6.8.9-10"
  IMAGE_MAGICK_FILE="ImageMagick-$IMAGE_MAGICK_VERSION.tar.gz"
  IMAGE_MAGICK_DIR="ImageMagick-$IMAGE_MAGICK_VERSION"
  IMAGE_MAGICK_URL="http://www.imagemagick.org/download/releases/$IMAGE_MAGICK_FILE"

  echo "-----> Downloading ImageMagick from $IMAGE_MAGICK_URL"
  curl -L --silent $IMAGE_MAGICK_URL | tar xz

  echo "-----> Building ImageMagick"
  cd $IMAGE_MAGICK_DIR
  export CPPFLAGS="-I$INSTALL_DIR/include"
  export LDFLAGS="-L$INSTALL_DIR/lib"
  ./configure --prefix=$INSTALL_DIR --with-webp --without-tiff --without-perl --with-quantum-depth=8 --disable-static
  make && make install
  cd ..
  rm -rf $IMAGE_MAGICK_DIR

  # cache for future deploys
  
  echo "-----> Caching GraphicsMagick / ImageMagick / libwebp installation"
  cd $VENDOR_DIR
  REL_INSTALL_DIR="imagemagick-graphicsmagick-webp"
  tar czf $REL_INSTALL_DIR.tar.gz $REL_INSTALL_DIR
  mv $REL_INSTALL_DIR.tar.gz $CACHE_FILE

else

  # cache exists, extract it

  echo "-----> Extracting GraphicsMagick / ImageMagick / libwebp from cache."
  tar xzf $CACHE_FILE -C $VENDOR_DIR
fi

# update PATH and LD_LIBRARY_PATH

echo "-----> Updating environment variables"
PROFILE_PATH="$BUILD_DIR/.profile.d/imagemagick-graphicsmagick-webp.sh"
ACTUAL_INSTALL_PATH="$HOME/vendor/imagemagick-graphicsmagick-webp"
mkdir -p $(dirname $PROFILE_PATH)
echo "export PATH=$ACTUAL_INSTALL_PATH/bin:\$PATH" >> $PROFILE_PATH
echo "export LD_LIBRARY_PATH=$ACTUAL_INSTALL_PATH/lib:\$LD_LIBRARY_PATH" >> $PROFILE_PATH
